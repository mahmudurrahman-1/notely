@page
@model Notely_App.Pages.views.CreateModel

<form method="post">
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2>Create &oplus;</h2>
        <hr />
    </div>
    <span asp-validation-summary="All"></span>
    <div class="mb-3">
        <label asp-for="@Model.Items.Company"></label>
        <input asp-for="@Model.Items.Company" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Items.Name"></label>
        <input class="form-control" asp-for="@Model.Items.Name" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Items.ItemsNo"></label>
        <input class="form-control" asp-for="@Model.Items.ItemsNo" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Items.ItemsAm"></label>
        <input class="form-control" asp-for="@Model.Items.ItemsAm" />
    </div>
    <button type="submit" class="btn-primary btn-primary" style ="width:150px;">Create &oplus;</button>
    <a asp-page="Index" class="btn btn-primary" ><span class="glyphicon glyphicon-plus-sign"></span>Return</a>

</div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}